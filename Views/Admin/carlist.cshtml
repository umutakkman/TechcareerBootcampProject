@model IEnumerable<Car>

<div class="container my-5">
    <h1 class="mb-4 text-center">Araba Listesi</h1>
    <div class="text-end mb-3">
        <a asp-controller="Admin" asp-action="Create" class="btn btn-secondary">
            <i class="bi bi-plus-circle"></i> Araba Ekle
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Car ID</th>
                    <th scope="col">Görsel</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Marka</th>
                    <th scope="col">Tür</th>
                    <th scope="col">Model</th>
                    <th scope="col">Koltuk Sayısı</th>
                    <th scope="col">Kira Ücreti</th>
                    <th scope="col">İlanda mı?</th>
                    <th scope="col" class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.CarID</td>
                        <td><img src="~/img/@car.Image" alt="@car.Title" class="img-thumbnail" style="max-width: 80px;" />
                        </td>
                        <td>@car.Title</td>
                        <td>@car.Brand</td>
                        <td>@car.Type</td>
                        <td>@car.Model</td>
                        <td>@car.Seats</td>
                        <td>@car.RentPrice.ToString("C")</td>
                        <td>
                            @if (car.IsActive)
                            {
                                <span class="badge bg-success text-light">Evet</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary text-light">Hayır</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@car.CarID"
                                class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil-fill"></i> Detaylar
                            </a>
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@car.CarID"
                                class="btn btn-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
