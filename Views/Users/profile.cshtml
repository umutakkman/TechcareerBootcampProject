@{
    var user = User;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-circle me-2"></i>Profil Bilgileri
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-12 text-center mb-4">
                            <div class="avatar-circle bg-secondary text-white d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 120px; height: 120px;">
                                <i class="bi bi-person-fill" style="font-size: 4rem;"></i>
                            </div>
                        </div>
                        
                        <div class="col-md-12">
                            <div class="mb-4">
                                <label class="text-muted">Kullanıcı Adı</label>
                                <div class="form-control bg-light">@user.Identity?.Name</div>
                            </div>

                            

                            @if (user.IsInRole("Admin"))
                            {
                                <div class="alert alert-info" role="alert">
                                    <i class="bi bi-shield-fill-check me-2"></i>
                                    Bu hesap admin yetkilerine sahiptir
                                </div>
                            }
                            else
                            {
                                <div class="mb-4">
                                <label class="text-muted">Ad Soyad</label>
                                <div class="form-control bg-light">@user.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName)?.Value</div>
                                </div>
                                <div class="mb-4">
                                <label class="text-muted">Email</label>
                                <div class="form-control bg-light">@user.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value</div>
                                </div>
                            }

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a asp-controller="Users" asp-action="Logout" class="btn btn-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>